import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
         int n=scn.nextInt();
         for(int i=1;i<=n;i++)
         {
             for(int k=0;k<i-1;k++)
             {
                 System.out.print("\t");
             }
             for(int j=i;j<=i;j++)
             {
                 System.out.print("*\t");
             }
             System.out.print("\n");
         }

    }
}
