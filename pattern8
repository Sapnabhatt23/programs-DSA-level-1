import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        int n=scn.nextInt();
        int st=1;
        for(int i=1;i<=n;i++)
        {
            for(int k=n;k>i;k--)
            {
                System.out.print("\t");
            }
            for(int j=0;j<st;j++)
            {
                System.out.print("*\t");
            }
            System.out.print("\n");
        }

    }
}
